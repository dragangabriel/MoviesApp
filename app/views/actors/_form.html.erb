<%= form_for @actor do |f| %>
 
  <% if @actor.errors.any? %>
    <div id="error_explanation" class="text-danger">
      <h2>
        <%= pluralize(@actor.errors.count, "error") %> prohibited
        this movie from being saved:
      </h2>
      <ul>
        <% @actor.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<div class="field form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :name, class: 'form-control' %>
    </div>
  </div>
  <br/><br/><br/><br/>
<div class="field form-group">
    <%= f.label :dateOfBirth, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :dateOfBirth, class: 'form-control' %>
    </div>
  </div>
  <br/><br/>
<div class="field form-group">
    <%= f.label :description, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: 'form-control' %>
    </div>
  </div>
  <br/><br/>
  <div class="field form-group">
    <%= f.label :photo, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.file_field :photo, class: 'form-control' %>
    </div>
  </div>
  <br/><br/>
  <div class="field form-group">
    <%= f.label :movies, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= select_tag "organizing_actor", options_from_collection_for_select(Movie.all, 'id', 'name',@actor.movies.map{ |j| j.id }), :multiple => true,  class: 'form-control' %>         
    </div> 
  </div>
  <br/><br/><br/><br/><br/>
   <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit %>
    </div>
  </div>

 
<% end %>
